<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/box_data"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/eina03_semi_bold"
        android:text="Name"
        android:textColor="@color/colorTextPrimaryDark"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/eina03_semi_bold"
        android:text="Name"
        android:textColor="@color/colorTextPrimaryDark"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/tv_company_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/eina03_semi_bold"
        android:text="location"
        android:textColor="@color/colorTextPrimaryDark"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_company_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/eina03_semi_bold"
        android:text="url"
        android:textColor="@color/colorTextPrimaryDark"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_company_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/eina03_regular"
        android:text="desc"
        android:textColor="@color/colorTextPrimaryDark"
        android:textSize="14sp" />

</LinearLayout>